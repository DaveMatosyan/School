@model School_Project.Models.User

@{
    ViewData["Title"] = "Info";
}


 <section class="d-flex pt-30 bgc justify-content-center">

  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">

    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Profile</p>

                <form asp-action="Profile" method="post" class="mx-1 mx-md-4">
                  
                  <div class="d-flex flex-row align-items-center mb-1.5">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label">FirstName</label>
                      <input type="text" asp-for="FirstName" class="form-control" />
                      <p class="text-danger">@ViewBag.FirstName</p>

                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-1.5">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label">LastName</label>
                      <input type="text" asp-for="LastName" class="form-control" />
                      <p class="text-danger">@ViewBag.LastName</p>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-1.5">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label">Username</label>
                      <input type="text" asp-for="Username" class="form-control" />
                      <p class="text-danger">@ViewBag.Username</p>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-1.5">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label">Password</label>
                      <input type="text" asp-for="Password" value="" class="form-control" />
                    </div>
                  </div>
                  @if(Model.Profession != null && Model.Profession != "Principal") {
                      <div class="d-flex flex-row align-items-center mb-1.5">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <label class="form-label">Profession</label>
                            <select asp-for="Profession" class="form-select">
                                <option value="Mathematics">Mathematician</option>
                                <option value="Physics">Physicist</option>
                                <option value="Chemistry">Chemist</option>
                            </select>
                        </div>
                      </div>
                  }


                  <div class="d-flex justify-content-center mx-4 mt-3 mb-4">
                    <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                  </div>



                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://preview.colorlib.com/theme/bootstrap/login-form-07/images/undraw_remotely_2j6y.svg"
                  class="img-fluid" >

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

</div>
</div>


<div class="modal" Id="teacherModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header d-block ">
        <h5 class="modal-title text-center">Do you want to delete your account?</h5>
        <button type="button" class="close closeTeacherModal custom-close-icon" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

                <div class="d-flex justify-content-center mx-4 mb-lg-4">
                <a class="btn btn-danger" asp-action="Delete">Delete Account</a>
                </div>

      </div>

   </div>
  </div>
   <div  class="modal-layer closeTeacherModal"></div>
</div>
</section>