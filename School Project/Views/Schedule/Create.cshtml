@model School_Project.Models.AddSchedule

@{
    ViewData["Title"] = "AddSchedule";
}

<h1>New Schedule</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-ClassId="@ViewBag.ClassId">
            <div class="form-group">
                <label asp-for="TeacherUsername" class="control-label"></label>
                <input asp-for="TeacherUsername" class="form-control" />
                <span asp-validation-for="TeacherUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hour" class="control-label"></label>
                <input asp-for="Hour" class="form-control" />
                <span asp-validation-for="Hour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayId" class="control-label">Weekday</label>
                <select name="DayId" id="DayId">
                            <option value="1">Monday</option>
                            <option value="2">Tuesday</option>
                            <option value="3">Wednesday</option>
                            <option value="4">Thursday</option>
                            <option value="5">Friday</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Add Schedule" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>