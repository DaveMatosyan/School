@model IEnumerable<School_Project.Models.Class>

@{
    ViewData["Title"] = "AllClasses";
}


 <section class="d-flex pt-80 justify-content-center">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col d-b">
        <h1>Classes</h1>

            <div class="overflow-auto">
            <table class="table table-hover classes-table  table-with-buttons">
                <thead>
                    <tr>
                        <th>
                            Class
                        </th>
                                @if(User.IsInRole("Principal"))
                                {
                                    <th>
                                        Timetable
                                    </th>
                                }

                                @if(User.IsInRole("Teacher"))
                                {
                                    <th>
                                        MarkBook
                                    </th>
                                }
                                @if(User.IsInRole("Principal"))
                                {
                                    <th>
                                        Students
                                    </th>
                                }
                                @if(User.IsInRole("Principal"))
                                {
                                    <th>
                                    </th>
                                }

                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Class1)
                        </td>
                                @if(User.IsInRole("Teacher"))
                                {
                                    <td>
                                        <a asp-controller="MarkBook" asp-action="Grades" asp-route-ClassId="@item.Id" asp-route-Title="MathematicsHour">Grades</a>
                                    </td>
                                }


                                @if(User.IsInRole("Principal"))
                                {
                                    <td>
                                        <a asp-controller="Schedule" asp-action="WeekTimetable" asp-route-ClassId="@item.Id">Schedules</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Student" asp-action="Students" asp-route-ClassId="@item.Id">Students</a>
                                    </td>
                                    <td>
                                        <a class="btn " asp-action="Edit" asp-route-id="@item.Id"><img class="edit-icon" src="https://www.svgrepo.com/show/36160/edit-button.svg" /></a>
                                        <a class="btn " asp-action="Delete" asp-route-id="@item.Id" ><img src="https://upload.wikimedia.org/wikipedia/commons/a/a3/Delete-button.svg"/></a>
                                    </td>
                                }

                    </tr>
            }
                </tbody>
            </table>
            </div>
            <p class="align-center">
                <a class="btn btn-primary" asp-action="AddClass">Create New</a>
            </p>
        </div>
    </div>
</div>
</section>

